{
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "curly": ["error", "multi-line"],
    "sort-imports": "off",
    "lines-between-class-members": "off",
    "no-useless-constructor": "off",
    "require-jsdoc": ["error", {
      "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": false,
          "FunctionExpression": false
      }
    }]
  }
}
