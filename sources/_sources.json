{
  "freelaw": {
    "decisionDatesCSV": "/sources/freelaw/decisionDates.csv"
  },
  "justia": {
    "download": {
      "volume": {
        "start": 1,
        "stop": 586,
        "url": "https://supreme.justia.com/cases/federal/us/%d/",
        "dir": "/sources/justia/volumes/",
        "file": "us%03d.html"
      }
    }
  },
  "loc": {
    "download": {
      "volume": {
        "start": 1,
        "stop": 542,
        "url": "https://www.loc.gov/collections/united-states-reports/?fa=partof:u.s.+reports:+volume+%d&st=list&c=300",
        "dir": "/sources/loc/volumes/",
        "file": "us%03d.html"
      },
      "pdf": {
        "info": "/sources/loc/pdfs/pdfinfo.txt",
        "url": "http://cdn.loc.gov/service/ll/usrep/usrep%03d/usrep%03d%03d/usrep%03d%03d.pdf",
        "dir": "/sources/loc/pdfs/%03d-%03d/%03d/",
        "file": "%03dus%03d.pdf"
      }
    }
  },
  "oyez": {
    "cases": "/sources/oyez/cases/_cases.json",
    "advocates": "/sources/oyez/advocates/_advocates.json",
    "courtsXML": "/sources/oyez/courts/**/court.xml",
    "courtsHTML": "/sources/oyez/justices_by_court.html",
    "justicesXML": "/sources/oyez/justices/**/justice.xml"
  },
  "oyezlabs": {
    "casesCSV": "/sources/sites/oyezlabs.org/cases.csv",
    "casesXML": "/sources/sites/oyezlabs.org/xml/cases/$1/**/case.xml"
  },
  "scdb": {
    "dateEnd": "2018-10-01",
    "vars": "/sources/scdb/vars.json",
    "courtsCSV": "/sources/scdb/naturalCourts.csv",
    "decisionsCSV": "/sources/scdb/decisions.csv",
    "justicesCSV": "/sources/scdb/justices.csv"
  },
  "scotus": {
    "citationsHTML": "/sources/scotus/citations/*.*",
    "download": {
      "transcriptOld": {
        "start": 1968,
        "stop": 1999,
        "url": "https://www.supremecourt.gov/oral_arguments/archived_transcripts/%d",
        "dir": "/sources/scotus/transcripts/%d",
        "file": "%d.html"
      },
      "transcriptNew": {
        "start": 2000,
        "stop": 2018,
        "url": "https://www.supremecourt.gov/oral_arguments/argument_transcript/%d",
        "dir": "/sources/scotus/transcripts/%d",
        "file": "%d.html"
      },
      "transcriptPDF": {
        "files": "/sources/scotus/transcripts/$1/*.html",
        "pattern": "<td style=\"text-align: left;\">\\s*<(?:div|span)[^>]*>\\s*<a href='([^']*)'[^>]*>\\s*(.*?)\\s*</a>\\s*</(?:div|span)>\\s*<(?:div|span)[^>]*>\\s*([^<]*)\\s*</(?:div|span)>\\s*</td>\\s*<td[^>]*>\\s*([0-9]+)/([0-9]+)/([0-9]+)\\s*</td>",
        "transform": {
          "$2": ["^([0-9]+)(\\s*|-)Orig\\.?$", "$1-orig"],
          "$4": "%02d",
          "$5": "%02d",
          "$6": ["^(0|1|2)([0-9])$", "20$1$2"]
        },
        "host": "https://www.supremecourt.gov$1",
        "url": "https://www.supremecourt.gov/oral_arguments/argument_transcript/$1",
        "file": "$2_$6-$4-$5.pdf",
        "urlExclusions": ["https://www.supremecourt.gov/pdfs/transcripts/1998/98-405_98-406_04-26-1999.pdf"],
        "notes": "Use --group=year and/or --limit=n to limit SCOTUS downloads (and sleep briefly between each run), otherwise the supremecourt.gov server may block your IP address for a short period of time. -JP"
      }
    }
  }
}
